---
import { Link } from "@/components/ui/link";
---

<section class="relative py-24 bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900">
  <div class="container px-4 md:px-6 mx-auto">
    <div class="flex flex-col items-center space-y-8 text-center">
      <div class="space-y-4 text-white">
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">Ready to Transform Your Learning?</h2>
        <p class="mx-auto max-w-[600px] text-gray-200 md:text-xl">
          Join thousands of students who are already learning smarter with AI-powered flashcards.
        </p>
      </div>
      <Link href="/register" variant="default" className="bg-white text-indigo-900 hover:bg-gray-100" client:load>
        Get Started Free
      </Link>
    </div>
  </div>
</section>
